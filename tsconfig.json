{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "suppressImplicitAnyIndexErrors": true,
        "ignoreDeprecations": "5.0",
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": "./src"
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "tailwind.config.js",
        "postcss.config.js",
        "next.config.js",
        "next.config.js"
    ],
    "exclude": [
        "node_modules"
    ]
}